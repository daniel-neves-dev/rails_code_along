<div>
  <h2><%= @post.rationale %></h2>
</div>

<div class="card">
  <div class="card-body">
    <div>
      <h4><span>Employee: </span><%= @post.user.full_name %></h4>
    </div>

    <div>
      <h4><span>Date: </span><%= @post.date %></h4>
    </div>

    <div>
      <h4><span>Current Stage of Approval: </span><%= @post.status %></h4>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post) if policy(@post).update? %>
